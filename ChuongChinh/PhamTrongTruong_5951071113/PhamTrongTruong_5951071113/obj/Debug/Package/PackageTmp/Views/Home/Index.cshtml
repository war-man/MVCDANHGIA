@model IEnumerable<PhamTrongTruong_5951071113.Models.Chuong_Hoc>
@{
    ViewBag.Title = "Học Bài";
    Layout = "~/Views/Shared/_Layout.cshtml";
   var arr=(double[])ViewBag.pt;
}
@section scripts{
    <script>
        var item = $('#hocbai');
        item.addClass("Narlink");

    </script>

}
<div class="row" style="margin-top:-3%">
    @for (int i = 0; i < @Model.ToArray().Count(); i++)
    {

        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-stats">
                <div class="card-header card-header-info">
                    <h4 class="card-title text-center">Chương @(i + 1) </h4>
                </div>
                <div class="card-header">
                    <div class="stats">
                        <label class="card-text">@Model.ToArray()[i].Ten_Chuong</label>
                    </div>
                    <div class="stats">
                        <label class="small">Số Bài @Model.ToArray()[i].Bai_Hoc.Where(x => x.Xoa == true).ToList().Count</label>
                    </div>
                    <br />

                    <div class="progress">
                        <div class="progress-bar bg-success" role="progressbar" style="width: @arr[i]%;" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>

                </div>
                <div class=" card-header-text text-center">
                    <a class="btn btn-facebook" href="/BaiHoc/@Model.ToArray()[i].Ma_Chuong">Học</a>
                </div>
            </div>
        </div>

    }
</div>


